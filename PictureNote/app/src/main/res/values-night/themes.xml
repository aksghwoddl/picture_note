<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PictureNote" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryVariant">#82b1ff</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#2196f3</item>
        <item name="colorSecondaryVariant">#90caf9</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main_color</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Splash Screen Theme -->
    <style name="AppTheme.Starting" parent="Theme.SplashScreen" tools:targetApi="s">
        <item name="windowSplashScreenBackground" tools:targetApi="s">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_icon</item>
        <item name="postSplashScreenTheme">@style/Theme.PictureNote</item>
        <item name="android:windowLightStatusBar" >false</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>
</resources>